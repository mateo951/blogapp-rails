<div class="post_data flex-row">
  <div class="post_info">
    <div class="flex-row in-between">
      <h4>Post #<%= @post.id %> by <%= @user.name%></h4>
      <div class="flex-row gap">
        <h5 class"small_text">Comments: <%= @post.comments_counter %></h5>
        <h5 class"small_text">Likes:<%= @post.likes_counter %></h5>
      </div>
    </div>
    <div class="flex">
    <h4 class=""><%= @post.text %></h4>
    </div>
  </div>
</div>
<%= link_to 'Create Comment', new_comment_path %>
<%= button_to "Like Post", new_like_path, params: { like: {author_id: @post.author_id, post_id: @post.id } }, method: :post %>
<div class="post_data flex-row">
  <div class="post_info">
  <%= render partial: 'shared/comment', :locals => { :user => @user, :comments => @comments } %>
  </div>
</div> 
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
